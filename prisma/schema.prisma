generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Category{
  id Int @id @default(autoincrement())
  name String
  created_at DateTime @default(now())
  deleted_at DateTime?
  posts Post[]

  @@map("categories")
}


model Post{
  id Int @id @default(autoincrement())
  title String
  content String
  category_id Int
  created_at DateTime @default(now())
  deleted_at DateTime?
  published_at DateTime?
  category Category @relation(fields: [category_id], references: [id])
  comments Comment[]
  postTags PostTag[]
  @@map("posts")
}


model Comment{
  id Int @id @default(autoincrement())
  post_id Int
  content String
  commenter_name String
  created_at DateTime @default(now())
  post Post @relation(fields: [post_id] , references: [id])

  @@map("comments")
}

model Tag{
  id Int @id @default(autoincrement())
  name String
  postTags PostTag[]

  @@map("tags")
}

model PostTag{
  post_id Int
  tag_id Int

  post Post @relation(fields: [post_id],references: [id])
  tag Tag @relation(fields:[tag_id],references: [id])

  @@id([post_id, tag_id])
  @@map("PostTags")
}